@{
    ViewData["Title"] = "Home Page";
}
<div class="col-md-12 index">
    <div>
        <h2>Welcome! To Online Examination</h2>
    </div>
    <div>
        <h3>Here you must have to regestration for be the member of online examination system.</h3>
        <h3>To know exam schedule please check below.</h3>
    </div>

    <div class="grid-container">
        <div class="grid-item">
            <img src="~/images/exam.png" />
            <h3>Exam Schedule</h3>
            <p>Exam date and time details</p>
            <form><input type="submit" asp-action="Index" asp-controller="ExamPapers" value="Show Schedule" /></form>
        </div>
        <div class="grid-item">
            <img src="~/images/result.png" />
            <h3>Result</h3>
            <p>Result and rank of the students</p>
            <form><input type="submit" asp-action="Index" asp-controller="ExamPapers" value="Show Result" /></form>
        </div>
    </div>

</div>
